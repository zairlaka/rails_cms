<%= link_to("<< Back to List", subjects_path, :class => 'back-link') %>

<div class="subjects delete">
  <h2>Delete Subject</h2>
  
  <%= form_for(@subject, :url => subject_path(@subject), :method => 'delete') do |f| %> 
<%# you can ommit the url part but not :method => delete you have to specify this  %>
    <p>Are you sure you want to permanently delete this subject?</p>

    <p class="reference-name"><%= f.object.name %></p>
    <%# notice f.object.name however sebject.name is totally workout for us fine %>

    <div class="form-buttons">
      <%= f.submit("Delete Subject") %>
    </div>

  <% end %>
</div>
